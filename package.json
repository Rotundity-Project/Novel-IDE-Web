{
  "name": "novel-studio-web",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev:app": "pnpm --filter app dev",
    "dev:server": "pnpm --filter server dev",
    "build": "pnpm --filter app build && pnpm --filter server build",
    "typecheck": "pnpm --filter app typecheck && pnpm --filter server typecheck",
    "docker:up": "docker compose -f docker/docker-compose.yml up --build -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down"
  }
}